    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="White">
        <!--<Grid.Background>
            <ImageBrush ImageSource="/Assets/Icons/MainPageBackground.png" />
        </Grid.Background>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0">
            <Border Background="{StaticResource OutlookBrush}">
                <TextBlock Text="Outlook India" Margin="5" FontSize="{StaticResource PhoneFontSizeNormal}" Foreground="White" />
            </Border>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="/assets/Shares/NoInternet.png" Height="100" />
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
                <TextBlock>
                    <Run></Run>
                </TextBlock>
                <TextBlock Text="We can't display this page at the moment. Please check your network connection and try again." TextWrapping="Wrap" FontSize="{StaticResource PhoneFontSizeLarge}" Foreground="Gray" />
            </StackPanel>
        </Grid>
    </Grid>
</phone:PhoneApplicationPage>